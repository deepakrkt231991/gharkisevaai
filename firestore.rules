rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Properties और सभी Public Collections के लिए सरल नियम
    match /properties/{doc} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /products/{doc} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /workers/{doc} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    // बाकी सभी चीजों के लिए लॉगिन अनिवार्य
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}