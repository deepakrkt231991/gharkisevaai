rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // =====================================================================
    // PUBLIC-READ COLLECTIONS
    // Anyone can read or list these collections, even without being logged in.
    // =====================================================================
    match /properties/{docId} {
      allow get, list: if true;
      allow write: if request.auth != null;
    }
    match /products/{docId} {
      allow get, list: if true;
      allow write: if request.auth != null;
    }
    match /workers/{workerId} {
      allow get, list: if true;
      allow write: if request.auth != null;
    }
    match /tools/{toolId} {
      allow get, list: if true;
      allow write: if request.auth != null;
    }
    match /banners/{bannerId} {
      allow get, list: if true;
      allow write: if false; // Managed via Firebase Console
    }
     match /app_settings/{docId} {
        allow read: if true;
        allow write: if false; // Managed via Firebase Console
    }


    // =====================================================================
    // USER-OWNED & PROTECTED COLLECTIONS
    // Access is restricted based on authentication and ownership.
    // =====================================================================

    // --- USER-OWNED COLLECTIONS ---
    // Users can only access their own documents.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
     match /health/{healthId} {
       allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    // --- TRANSACTION & SENSITIVE DATA ---
    // Only the user involved can read. No one can create/update directly.
    match /transactions/{transactionId} {
      allow read: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create, update, delete: if false; // Created via server actions
    }
     match /sos_alerts/{alertId} {
       allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
    }


    // --- TWO-PARTY DATA (DEALS, JOBS, RENTALS) ---
    // Only the parties involved can access the data.
    function isParty(resource) {
      return request.auth != null && (
        request.auth.uid == resource.data.buyerId ||
        request.auth.uid == resource.data.sellerId ||
        request.auth.uid == resource.data.customerId ||
        request.auth.uid == resource.data.workerId ||
        request.auth.uid == resource.data.renterId ||
        request.auth.uid == resource.data.ownerId
      );
    }

    match /deals/{dealId} {
      allow read, update: if isParty(resource);
      allow create: if request.auth != null && request.auth.uid == request.resource.data.buyerId;
    }

    match /jobs/{jobId} {
      allow read, update: if isParty(resource);
      allow create: if request.auth != null && request.auth.uid == request.resource.data.customerId;
    }

    match /rentals/{rentalId} {
      allow read, update: if isParty(resource);
      allow create: if request.auth != null && request.auth.uid == request.resource.data.renterId;
    }
    
    match /legal_agreements/{agreementId} {
      allow read: if isParty(resource);
      allow create: if request.auth != null;
    }
  }
}
