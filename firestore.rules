rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      return request.auth.token.email == 'admin@gharkiseva.com';
    }

    // =====================================================================
    // PUBLIC-READ COLLECTIONS
    // Anyone can read or list these collections. Writes require authentication.
    // =====================================================================
    match /properties/{propertyId} {
      allow get, list: if true;
      allow write: if request.auth != null;
    }
    match /products/{productId} {
      allow get, list: if true;
      allow write: if request.auth != null;
    }
    match /workers/{workerId} {
      allow get, list: if true;
      // Allow workers to create/update their own profile
      allow write: if request.auth != null && request.auth.uid == workerId;
    }
    match /tools/{toolId} {
      allow get, list: if true;
      allow write: if request.auth != null;
    }
    match /banners/{bannerId} {
      allow get, list: if true;
      allow write: if isAdmin(); // Only admin can write
    }
     match /app_settings/{docId} {
        allow get, list: if true;
        allow write: if isAdmin(); // Only admin can write
    }


    // =====================================================================
    // USER-OWNED & PROTECTED COLLECTIONS
    // Access is restricted based on authentication and ownership.
    // =====================================================================

    // --- USER-OWNED COLLECTIONS ---
    // Users can only access their own documents.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
     match /health/{healthId} {
       // Assuming health data has a 'userId' field
       allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    // --- TRANSACTION & SENSITIVE DATA ---
    match /transactions/{transactionId} {
      // Admins can list all transactions for the dashboard.
      allow list: if isAdmin();
      // Users can only get their own specific transaction, Admins can get any.
      allow get: if (request.auth != null && request.auth.uid == resource.data.userId) || isAdmin();
      allow create, update, delete: if false; // Created via trusted server actions
    }
     match /sos_alerts/{alertId} {
       allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
    }


    // --- TWO-PARTY DATA (DEALS, JOBS, RENTALS) ---
    function isParty(resource) {
      let data = resource.data;
      return request.auth != null && (
        request.auth.uid == data.buyerId ||
        request.auth.uid == data.sellerId ||
        request.auth.uid == data.customerId ||
        request.auth.uid == data.workerId ||
        request.auth.uid == data.renterId ||
        request.auth.uid == data.ownerId
      );
    }

    match /deals/{dealId} {
      allow read, update: if isParty(resource) || isAdmin();
      // Only the buyer can initiate a deal
      allow create: if request.auth != null && request.auth.uid == request.resource.data.buyerId;
    }

    match /jobs/{jobId} {
      allow read, update: if isParty(resource) || isAdmin();
      // Only the customer can create a job
      allow create: if request.auth != null && request.auth.uid == request.resource.data.customerId;
    }

    match /rentals/{rentalId} {
      allow read, update: if isParty(resource) || isAdmin();
      // Only the renter can create a rental request
      allow create: if request.auth != null && request.auth.uid == request.resource.data.renterId;
    }
    
    match /legal_agreements/{agreementId} {
      allow read: if isParty(resource) || isAdmin();
      // Allow any authenticated user to create an agreement (triggered by an action)
      allow create: if request.auth != null;
    }
  }
}
