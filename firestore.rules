
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Properties को कोई भी देख सकता है, लेकिन लिख सिर्फ लॉगिन यूजर सकता है
    match /properties/{propertyId} {
      allow read: if true; 
      allow write: if request.auth != null;
    }
    
    // बाकी सभी कलेक्शंस के लिए लॉगिन अनिवार्य है
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
