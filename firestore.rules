rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      // Check for the admin's specific email.
      return request.auth != null && request.auth.token.email == 'deepakkadamrkt@gmail.com';
    }

    // =====================================================================
    // PUBLIC-READ COLLECTIONS
    // =====================================================================
    match /properties/{propertyId} {
      // Public can list verified properties. Owners and admins can get any.
      allow list: if resource.data.verificationStatus == 'verified';
      allow get: if resource.data.verificationStatus == 'verified'
                  || (request.auth != null && request.auth.uid == resource.data.ownerId)
                  || isAdmin();

      // Authenticated users can create listings.
      allow create: if request.auth != null;

      // Owners can update their listings, but not the verification status. Admins can update anything.
      allow update: if (request.auth != null && request.auth.uid == resource.data.ownerId && request.resource.data.verificationStatus == resource.data.verificationStatus)
                    || isAdmin();

      // Only admins can delete properties.
      allow delete: if isAdmin();
    }
    match /products/{productId} {
      allow get, list: if true;
      allow write: if request.auth != null;
    }
    match /workers/{workerId} {
      allow get, list: if true;
      // Allow workers to create/update their own profile
      allow write: if request.auth != null && request.auth.uid == workerId;
    }
    match /tools/{toolId} {
      allow get, list: if true;
      allow write: if request.auth != null;
    }
    match /banners/{bannerId} {
      allow get, list: if true;
      allow write: if isAdmin(); // Only admin can write
    }
     match /app_settings/{docId} {
        allow get, list: if true;
        allow write: if isAdmin(); // Only admin can write
    }


    // =====================================================================
    // USER-OWNED & PROTECTED COLLECTIONS
    // =====================================================================

    // --- USER-OWNED COLLECTIONS ---
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
     match /health/{healthId} {
       // Assuming health data has a 'userId' field
       allow read, write: if 'userId' in resource.data && request.auth != null && request.auth.uid == resource.data.userId;
    }

    // --- TRANSACTION & SENSITIVE DATA ---
    match /transactions/{transactionId} {
        allow get: if request.auth != null && (isAdmin() || ('userId' in resource.data && request.auth.uid == resource.data.userId));
        allow list: if request.auth != null && (isAdmin() || (request.query.where.size() > 0 && request.query.where[0][1] == 'userId'));
        
        // Writes are disabled from the client for security.
        allow write: if false;
    }
    
     match /sos_alerts/{alertId} {
       allow read, write: if 'userId' in resource.data && request.auth != null && request.auth.uid == resource.data.userId;
    }


    // --- TWO-PARTY DATA (DEALS, JOBS, RENTALS) ---
    function isParty(resource) {
      // Ensure data exists before accessing fields
      let data = resource.data;
      return request.auth != null && (
        ('buyerId' in data && request.auth.uid == data.buyerId) ||
        ('sellerId' in data && request.auth.uid == data.sellerId) ||
        ('customerId' in data && request.auth.uid == data.customerId) ||
        ('workerId' in data && request.auth.uid == data.workerId) ||
        ('renterId' in data && request.auth.uid == data.renterId) ||
        ('ownerId' in data && request.auth.uid == data.ownerId)
      );
    }

    match /deals/{dealId} {
      allow read, update: if isParty(resource) || isAdmin();
      // Only the buyer can initiate a deal
      allow create: if request.auth != null && request.auth.uid == request.resource.data.buyerId;
    }

    match /jobs/{jobId} {
      allow read, update: if isParty(resource) || isAdmin();
      // Only the customer can create a job
      allow create: if request.auth != null && request.auth.uid == request.resource.data.customerId;
    }

    match /rentals/{rentalId} {
      allow read, update: if isParty(resource) || isAdmin();
      // Only the renter can create a rental request
      allow create: if request.auth != null && request.auth.uid == request.resource.data.renterId;
    }
    
    match /legal_agreements/{agreementId} {
      allow read: if isParty(resource) || isAdmin();
      // Allow any authenticated user to create an agreement (triggered by an action)
      allow create: if request.auth != null;
    }
  }
}
